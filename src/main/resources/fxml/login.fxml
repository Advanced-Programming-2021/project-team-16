<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="graphicview.LoginMenu"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-font: 14 arial;">
    <center>
        <GridPane vgap="10" hgap="40" alignment="CENTER">
            <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="5">
                <Label text="username"/>
                <TextField fx:id="usernameLogin"/>
            </HBox>
            <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="5">
                <Label text="password"/>
                <PasswordField fx:id="passwordLogin"/>
            </HBox>
            <Button text="login" onMouseClicked="#login" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="loginError" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>


            <HBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="5">
                <Label text="username"/>
                <TextField fx:id="usernameSignup"/>
            </HBox>
            <HBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="5">
                <Label text="password"/>
                <PasswordField fx:id="passwordSignup"/>
            </HBox>
            <HBox GridPane.rowIndex="2" GridPane.columnIndex="1" spacing="5">
                <Label text="nickname"/>
                <TextField fx:id="nickname"/>
            </HBox>
            <Button text="signup" onMouseClicked="#signup" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label fx:id="signupError" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

        </GridPane>
    </center>
</BorderPane>
