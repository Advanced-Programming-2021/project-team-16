<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="graphicview.ProfileMenu"
          prefHeight="400.0" prefWidth="600.0"
          style="-fx-font: 13 arial;" vgap="10" hgap="5" alignment="CENTER">
    <Label text="Your Profile:" style="-fx-font: 15 arial;" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3"/>
    <Rectangle fx:id="profilePicture" width="70" height="90" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.rowSpan="3"/>
    <Label fx:id="username" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="nickname" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

    <Separator GridPane.rowSpan="2" GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.columnIndex="0"/>

    <TextField  fx:id="newNickname" promptText="new nickname" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <Button text="change nickname" GridPane.rowIndex="9" GridPane.columnIndex="0" onMouseClicked="#changeNickname"/>
    <Label fx:id="changeNicknameAlert" GridPane.rowIndex="10" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <TextField fx:id="oldPass" promptText="current password" GridPane.rowIndex="8" GridPane.columnIndex="2"/>
    <TextField fx:id="newPass" promptText="new password" GridPane.rowIndex="9" GridPane.columnIndex="2"/>
    <Button  text="change password" GridPane.rowIndex="10" GridPane.columnIndex="2" onMouseClicked="#changePass"/>
    <Label  fx:id="changePassAlert" GridPane.rowIndex="11" GridPane.columnIndex="2" GridPane.columnSpan="2"/>

    <Button text="back" GridPane.rowIndex="13" GridPane.columnIndex="3" onMouseClicked="#enterMainMenu"/>



</GridPane>
