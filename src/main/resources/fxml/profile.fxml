<GridPane alignment="CENTER" hgap="5" prefHeight="400.0" prefWidth="650.0" style="-fx-font: 13 arial;" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicview.ProfileMenu">
    <Rectangle fx:id="avatar" height="90" width="70" GridPane.rowIndex="1" GridPane.rowSpan="3" />
    <Label fx:id="username" style="-fx-font: 16 arial;" textFill="#a3a7b7" GridPane.rowIndex="4">
      <font>
         <Font name="Script MT Bold" size="12.0" />
      </font></Label>
    <Label fx:id="nickname" style="-fx-font: 16 arial;" textFill="#a3a7b7" GridPane.rowIndex="5">
      <font>
         <Font name="Script MT Bold" size="12.0" />
      </font></Label>

    <Separator GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.rowSpan="2" />

    <TextField fx:id="newNickname" promptText="new nickname" GridPane.rowIndex="8" />
    <Button onMouseClicked="#changeNickname" style="-fx-background-color: #a3a7b7;" text="change nickname" textFill="#0a3359" GridPane.rowIndex="9">
      <font>
         <Font name="Script MT Bold" size="17.0" />
      </font></Button>

    <TextField fx:id="oldPass" promptText="current password" GridPane.columnIndex="2" GridPane.rowIndex="8" />
    <TextField fx:id="newPass" promptText="new password" GridPane.columnIndex="2" GridPane.rowIndex="9" />
    <Button onMouseClicked="#changePass" style="-fx-background-color: #a3a7b7;" text="change password" textFill="#0a3359" GridPane.columnIndex="2" GridPane.rowIndex="10">
      <font>
         <Font name="Script MT Bold" size="17.0" />
      </font></Button>

    <Label fx:id="changeAvatarExplanation" alignment="TOP_CENTER" contentDisplay="RIGHT" style="-fx-font: 15 arial;" textAlignment="CENTER" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="8">
      <font>
         <Font name="Script MT Bold" size="12.0" />
      </font></Label>
    <TextField fx:id="avatarName" promptText="name.png/name.jpd/..." GridPane.columnIndex="4" GridPane.rowIndex="9" />
    <Button onMouseClicked="#changeAvatar" style="-fx-background-color: #a3a7b7;" text="change avatar" textFill="#0a3359" GridPane.columnIndex="4" GridPane.rowIndex="10">
      <font>
         <Font name="Script MT Bold" size="17.0" />
      </font></Button>


    <Label fx:id="changeAlert" style="-fx-font: 17 arial;" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="13" />


    <Button onMouseClicked="#enterMainMenu" prefHeight="21.0" prefWidth="62.0" style="-fx-background-color: #a3a7b7;" text="back" textFill="#0a3359" GridPane.columnIndex="5" GridPane.rowIndex="13">
      <font>
         <Font name="Script MT Bold" size="17.0" />
      </font></Button>
   <ImageView fitHeight="41.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2">
      <image>
         <Image url="@../png/texture/1110008906142cddcf001f260d56f34d.png" />
